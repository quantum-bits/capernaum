{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@server/*": ["apps/server/*"],
      "@reporter/*": ["apps/reporter/*"],
      "@common/*": ["apps/*"],
      "@qapi/*": ["libs/qualtrics-api/src/*"]
    }
  }
}
