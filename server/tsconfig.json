{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "paths": {
      "@apps/*": [
        "apps/*"
      ],
      "@server/*": [
        "apps/server/*"
      ],
      "@qapi/qualtrics-api": [
        "libs/qualtrics-api/src"
      ],
      "@qapi/qualtrics-api/*": [
        "libs/qualtrics-api/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "etc"
  ]
}

